<?xml version="1.0" encoding="UTF-8"?>
<mappings xmlns="http://dozer.sourceforge.net"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://dozer.sourceforge.net
          http://dozer.sourceforge.net/schema/beanmapping.xsd">
          
  <mapping> 
    <class-a>io.gravitee.repository.model.User</class-a>
    <class-b>io.gravitee.repositories.mongodb.internal.model.UserMongo</class-b>   
    <field>
      <a>username</a>
      <b>name</b>
    </field>
  </mapping>  
  
  <mapping> 
    <class-a>io.gravitee.repository.model.Api</class-a>
    <class-b>io.gravitee.repositories.mongodb.internal.model.ApiMongo</class-b>   
    <field>
		<a set-method="setPrivate" get-method="isPrivate">privateApi</a>
  		<b set-method="setPrivateApi" get-method="isPrivateApi">privateApi</b>
    </field>
    <field-exclude>
    	<a>owner</a>
    	<b>owner</b>
    </field-exclude>
  </mapping>  
  
  <mapping> 
    <class-a>io.gravitee.repository.model.Application</class-a>
    <class-b>io.gravitee.repositories.mongodb.internal.model.ApplicationMongo</class-b>  
    <field-exclude>
    	<a>owner</a>
    	<b>owner</b>
    </field-exclude>
     <field-exclude>
    	<a>creator</a>
    	<b>creator</b>
    </field-exclude>   
    
  </mapping>  
  
  <mapping> 
    <class-a>io.gravitee.repository.model.Team</class-a>
    <class-b>io.gravitee.repositories.mongodb.internal.model.TeamMongo</class-b>  
    <field>
		<a set-method="setPrivate" get-method="isPrivate">privateTeam</a>
  		<b set-method="setPrivateTeam" get-method="isPrivateTeam">privateTeam</b>
    </field> 
  </mapping>  

</mappings> 